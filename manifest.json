{
  "manifest_version": 2,

  "name": "Gitchat",
  "description": "Live chat within your github repository.",
  "version": "1.0",

  "permissions": [
    "https://github.com/*",
    "http://github.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/firebase/firebase.js",
        "gitchat.js"
      ],
      "matches": [
        "*://github.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "bower_components/jquery/dist/jquery.min.map"
  ]
}
